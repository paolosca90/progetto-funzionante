# AI Cash Revolution Server Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Authentication
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRY=7d

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aicash-revolution

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Oanda Trading API (Real Trading Data)
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here
OANDA_BASE_URL=https://api-fxpractice.oanda.com

# CME Group APIs (Futures Data)
CMEGROUP_API_KEY=your_cme_api_key_here
CMEGROUP_BASE_URL=https://www.cmegroup.com

# Google OAuth (User Authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Gemini AI (Natural Language Processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Sierra Chart Integration (Volumetric Analysis)
SIERRA_CHART_HOST=localhost
SIERRA_CHART_PORT=4444

# MT5 Bridge (Trade Execution)
MT5_HOST=localhost
MT5_PORT=9999

# Email Configuration (for password reset)
EMAIL_FROM=noreply@aicash-revolution.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cross-Origin Resource Sharing (CORS)
CORS_ORIGIN=http://localhost:3000

# ML Optimization Settings
ENABLE_CONTINUOUS_ML=true
ML_OPTIMIZATION_INTERVAL=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000

# Subscription and Billing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_KEY=your_segment_key_here

# External API Rate Limits
OANDA_RATE_LIMIT_PER_MINUTE=60
CME_RATE_LIMIT_PER_HOUR=1000
GEMINI_RATE_LIMIT_PER_MINUTE=60

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# Redis Connection Pool
REDIS_POOL_MIN=1
REDIS_POOL_MAX=10

# File Storage (AWS S3 or Local)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name
LOCAL_STORAGE_PATH=./uploads

# Notification Services
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_number

# Monitoring Webhooks
SLACK_WEBHOOK_URL=your_slack_webhook
DISCORD_WEBHOOK_URL=your_discord_webhook

# CDN Configuration
CDN_BASE_URL=https://cdn.aicash-revolution.com
CDN_ENABLED=false