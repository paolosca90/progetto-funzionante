# AI Cash Revolution - Production Environment Configuration
# Copy this file to .env and update with your actual production values

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Domain and CORS
DOMAIN=aicash-revolution.com
CORS_ORIGIN=https://aicash-revolution.com,https://www.aicash-revolution.com
TRUST_PROXY=true

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_32_CHARS_MIN
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=CHANGE_ME_STRONG_REFRESH_SECRET_32_CHARS_MIN
JWT_REFRESH_EXPIRY=7d

# Session configuration
SESSION_SECRET=CHANGE_ME_STRONG_SESSION_SECRET_32_CHARS_MIN
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL Production Database (e.g., AWS RDS, Railway, Supabase)
DATABASE_URL=postgresql://username:password@hostname:5432/aicash_revolution?sslmode=require

# Connection pool settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000

# ==========================================
# REDIS CONFIGURATION
# ==========================================
# Redis for caching and sessions (e.g., Redis Cloud, ElastiCache)
REDIS_URL=redis://username:password@hostname:6379
REDIS_HOST=hostname
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Redis connection pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# ==========================================
# TRADING API INTEGRATIONS
# ==========================================

# Oanda API (Live Trading)
OANDA_API_KEY=your_oanda_live_api_key
OANDA_ACCOUNT_ID=your_oanda_live_account_id
OANDA_BASE_URL=https://api-fxtrade.oanda.com
OANDA_RATE_LIMIT_PER_MINUTE=60

# CME Group APIs (Futures Data)
CMEGROUP_API_KEY=your_cme_api_key
CMEGROUP_BASE_URL=https://www.cmegroup.com
CME_RATE_LIMIT_PER_HOUR=1000

# Sierra Chart Integration (Volumetric Analysis)
SIERRA_CHART_HOST=your_sierra_chart_server
SIERRA_CHART_PORT=4444
SIERRA_CHART_USERNAME=your_sierra_username
SIERRA_CHART_PASSWORD=your_sierra_password

# MT5 Bridge (Trade Execution)
MT5_HOST=your_mt5_bridge_server
MT5_PORT=9999
MT5_USERNAME=your_mt5_account
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# ==========================================
# GOOGLE OAUTH CONFIGURATION
# ==========================================
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# ==========================================
# AI/ML SERVICES
# ==========================================
# Gemini AI (Google AI)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_RATE_LIMIT_PER_MINUTE=60

# OpenAI (Alternative AI provider)
OPENAI_API_KEY=your_openai_api_key

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
EMAIL_FROM=noreply@aicash-revolution.com
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key

# ==========================================
# PAYMENT PROCESSING
# ==========================================
# Stripe (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Segment (Analytics)
ANALYTICS_KEY=your_segment_write_key

# New Relic (APM)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=AI Cash Revolution Production

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLE=true

# API specific rate limits
AUTH_RATE_LIMIT=10
SIGNALS_RATE_LIMIT=60
TRADING_RATE_LIMIT=100

# ==========================================
# ML/AI OPTIMIZATION
# ==========================================
ENABLE_CONTINUOUS_ML=true
ML_OPTIMIZATION_INTERVAL=5
ML_BATCH_SIZE=1000
ML_LEARNING_RATE=0.001

# ==========================================
# FILE STORAGE
# ==========================================
# AWS S3 for production file storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aicash-revolution-production
CDN_BASE_URL=https://cdn.aicash-revolution.com
CDN_ENABLED=true

# Local fallback
LOCAL_STORAGE_PATH=/opt/aicash-revolution/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ==========================================
# HEALTH & MONITORING
# ==========================================
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_ENABLED=true

# ==========================================
# NOTIFICATION SERVICES
# ==========================================
# Twilio (SMS Notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (Team Notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Discord (Community Notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=aicash-revolution-backups

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_REGISTRATION=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_MOBILE_PUSH=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# ==========================================
# SECURITY SETTINGS
# ==========================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_PHONE_VERIFICATION=false
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# API Security
API_KEY_REQUIRED=false
API_VERSION=v1
ENABLE_API_DOCS=false

# ==========================================
# TRADING SYSTEM SETTINGS
# ==========================================
# Risk management
MAX_POSITION_SIZE_PERCENT=5
DEFAULT_STOP_LOSS_PERCENT=2
DEFAULT_TAKE_PROFIT_PERCENT=4
MAX_DAILY_TRADES=10
ENABLE_RISK_MANAGEMENT=true

# Signal generation
SIGNAL_CONFIDENCE_THRESHOLD=0.7
MAX_CONCURRENT_SIGNALS=5
SIGNAL_EXPIRY_MINUTES=60

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================
CLUSTER_MODE=true
CLUSTER_WORKERS=0
COMPRESSION_ENABLED=true
CACHE_TTL=3600
ENABLE_SWAGGER=false

# ==========================================
# DEVELOPMENT/DEBUG (Set to false in production)
# ==========================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS_DEBUG=false
PRETTY_PRINT_LOGS=false