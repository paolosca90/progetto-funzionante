# Unified Environment Configuration Example
# Copy this file to .env and update with your actual values
# This configuration supports all environments: development, staging, production, testing

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Application Information
PROJECT_NAME=Trading Signals System
VERSION=2.0.1
DESCRIPTION=Professional Trading Signals Platform with AI and OANDA Integration

# Server Configuration
HOST=127.0.0.1
PORT=8000
MAX_WORKERS=4
TIMEOUT=30

# Security Configuration
SECURITY_JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trading_signals
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Cache TTL Configuration (in seconds)
CACHE_TTL_SHORT=300        # 5 minutes
CACHE_TTL_MEDIUM=1800      # 30 minutes
CACHE_TTL_LONG=3600        # 1 hour
CACHE_TTL_VERY_LONG=86400  # 24 hours
CACHE_PREFIX=ai_trading:

# Cache Warming Configuration
CACHE_WARMING_ENABLED=true
CACHE_WARMING_INTERVAL=300  # 5 minutes
CACHE_WARMING_MAX_CONCURRENT=5

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false

# OANDA API Configuration
OANDA_API_KEY=your-oanda-api-key
OANDA_ACCOUNT_ID=your-oanda-account-id
OANDA_ENVIRONMENT=demo
OANDA_BASE_URL=https://api-fxpractice.oanda.com/v3
OANDA_TIMEOUT=30
OANDA_RETRY_ATTEMPTS=3

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000
AI_CONFIDENCE_THRESHOLD=0.6

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring and Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
ENABLE_METRICS=true
METRICS_PORT=8080
ENABLE_HEALTH_CHECKS=true
ENABLE_PROFILING=false

# Sentry Error Tracking Configuration
SENTRY_DSN=https://your-sentry-dsn-here.ingest.sentry.io/your-project-id
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_ENABLE_PERFORMANCE_MONITORING=true
SENTRY_ENABLE_SESSION_REPLAY=false
SENTRY_ENVIRONMENT=development
SENTRY_ENABLE_ERROR_CLASSIFICATION=true
SENTRY_ALERT_ON_CRITICAL_ERRORS=true
SENTRY_ALERT_ON_ERROR_RATE_INCREASE=true
SENTRY_ERROR_RATE_THRESHOLD=0.1
SENTRY_ENABLE_CUSTOM_METRICS=true
SENTRY_METRICS_FLUSH_INTERVAL=60

# Trading Configuration
DEFAULT_SYMBOLS=["EURUSD","GBPUSD","USDJPY","AUDUSD","USDCAD","NZDUSD","EURGBP","EURJPY","GBPJPY","GOLD"]
MAX_DAILY_SIGNALS=100
DEFAULT_RISK_LEVEL=MEDIUM
DEFAULT_POSITION_SIZE=0.01
MAX_POSITION_SIZE=0.05
TRADING_HOURS_ENABLED=true
TRADING_SESSION_TIMEZONE=UTC
SIGNAL_CONFIDENCE_THRESHOLD=0.6
SIGNAL_GENERATION_INTERVAL=300

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_REAL_TIME_DATA=true
ENABLE_USER_AUTHENTICATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CACHE_WARMING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SIGNAL_EXECUTION=false
ENABLE_PAPER_TRADING=true

# SSL/TLS Configuration (for production)
SSL_KEYFILE=
SSL_CERTFILE=

# Error Tracking (Sentry, etc.)
ENABLE_ERROR_TRACKING=false
ERROR_TRACKING_DSN=

# Railway will provide these automatically:
# RAILWAY_ENVIRONMENT
# RAILWAY_SERVICE_NAME
# PORT
# DATABASE_URL
# REDIS_URL
